<%= will_paginate @users %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Login</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% if @users.blank? %>
      <tr>
        <td colspan="4">No users : [</td>
      </tr>
    <% else %>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to image_tag(user.photo.url(:thumbnail)), user_portfolio_path(user.login) %>
          </td>
          <td>
            <%= link_to h(user.login), user_portfolio_path(user.login) %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= link_to "DELETE", admin_user_path(user), :confirm => "Are you sure??", :method => :delete %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

