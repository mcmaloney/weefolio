<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function() {
      var for_sale = <%= @piece.for_sale? %>;
      if (for_sale == true) {
        $('#piece_price').show();
      } else {
        $('#piece_price').hide();
      }
    });
  </script>
<% end %>
<%= render :partial => "form" %>