<!--PAGE TITLE/CALL-TO-ACTION-->
<%# YIELD %>
<div class="page-header-container-outer">
	<div class="page-header-container-inner">
		<h1>Themes <small>Choose from our growing gallery of Weefolio themes!</small></h1>
	</div>
	
	<div class="call-to-action" id="submit-theme">
	   <%= link_to 'Submit Theme', new_theme_upload_path %>
	</div>
</div>

<!--PAGE CONTENT-->
<%# YIELD %>
<div class="content-container">
  <% if flash[:warning] or flash[:notice] %>
	  	<div id="notice" <% if flash[:warning] %>class="warning"<% end %>>
	      <%= flash[:warning] || flash[:notice] %>
	  	</div>
	<% end %>
	<div class="column">  
		<ul class="themes">
		  <% @themes.each do |theme| %>
		   <% if theme.connected? %>
		     <li class="theme">
    		  <div class="image">
    		    <%= image_tag theme.photo.url(:thumbnail), :class => "thumbnail", :width => "230", :height => "150" %>
    		    <div class="options">
    		      <%= link_to "Preview", theme_path(theme), :class => "secondary-button preview"%>
    		      <% if current_user %>
    		        <%= show_install_for(current_user, theme) %>
    		      <% end %>
    		   </div>
    		  </div>
		  
    		  <div class="info">
    		   <h2><%= theme.name %></h2>
    		   <% unless theme.author_name.blank? %>
    		      <p>by <%= link_to theme.author_name, user_portfolio_path(theme.author_name) %></p>
    		   <% end %>
    		  </div>
    		 </li>
    	<% end %>
  	<% end %>
		</ul>
	</div>
</div>


