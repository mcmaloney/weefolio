<% form_for @theme_upload, :html => { :multipart => true } do |f| %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :source_code %><br />
    <%= f.text_area :source_code %>
  </p>
  <p>
    <%= f.label :screenshot %><br />
    <%= f.file_field :screenshot %>
  </p>
  <p>
    <%= f.label :asset_package %><br />
    <%= f.file_field :asset_package %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
  
